<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_vehicle_information"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Information"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <EditText
        android:id="@+id/edt_vehicle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_vehicle_information"
        android:ems="5" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edt_vehicle_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edt_vehicle_name"
        android:ems="10" />

    <EditText
        android:id="@+id/edt_vehicle_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edt_vehicle_year"
        android:ems="10" />

    <EditText
        android:id="@+id/edt_vehicle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edt_vehicle_brand"
        android:ems="10" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edt_vehicle_type"
        android:gravity="center"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/sp_vehicle_fueltype"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:entries="@array/array_fueltype" />

    <Spinner
        android:id="@+id/sp_vehicle_distance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sp_vehicle_fueltype"
        android:entries="@array/array_distance" />

    <Spinner
        android:id="@+id/sp_vehicle_quantity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sp_vehicle_distance"
        android:entries="@array/country_arrays" />

    <Spinner
        android:id="@+id/sp_vehicle_consumption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sp_vehicle_quantity"
        android:entries="@array/array_consumption" />

    <TextView
        android:id="@+id/tv_vehicle_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sp_vehicle_consumption"
        android:text="Currency Symbol" />

    <EditText
        android:id="@+id/edt_vehicle_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_vehicle_currency"
        android:ems="1" />

    <Button
        android:id="@+id/btn_fragment_vehicle_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Save" />
    
</RelativeLayout>